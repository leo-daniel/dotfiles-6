#!/bin/sh

echo '\n<<<<<<< rcup -v'
rcup -v

echo '\n>>>>> Brew bundle'
(cd ~/.dotfiles && brew bundle)

echo '\n>>>>> Backups'
backup-history
backup-rubymine

echo '\n<<<<<< Unpushed changes to GH'
echo 'DOTFILES...'
(cd ~/.dotfiles && PAGER=cat git diff origin/master..HEAD)

echo 'ME...'
(cd ~/work/me && PAGER=cat git diff origin/gh-pages..HEAD)

cowsay 'Done!'
