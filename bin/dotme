#!/bin/sh

echo '\n<<<<<<< rcup -v'
rcup -v

echo '\n>>>>> Brew bundle'
(cd ~/.dotfiles && brew bundle)

echo '\n>>>>> Backups'
backup-history
backup-rubymine
backup-me-drafts

echo '\n<<<<<< Unpushed changes to GH'
echo 'DOTFILES'
echo '============'
(cd ~/.dotfiles && git checkout master && PAGER=cat git diff origin/master..HEAD && PAGER=cat git diff)
echo '============'

echo 'ME...'
echo '============'
(cd ~/work/me && git checkout gh-pages && PAGER=cat git diff origin/gh-pages..HEAD && PAGER=cat git diff)
echo '============'

echo 'me-toc...'
echo '============'
(cd ~/work/me-toc && git checkout master && PAGER=cat git diff origin/master..HEAD && PAGER=cat git diff)
echo '============'

cowsay 'Done!'
