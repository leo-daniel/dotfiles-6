#!/bin/sh

echo '\n<<<<<<< rcup -v'
rcup -v

echo '\n>>>>> Brew bundle'
(cd ~/.dotfiles && brew bundle)

echo '\n>>>>> Backups'
backup-history
backup-rubymine
backup-me-drafts

echo '\n<<<<<< Unpushed changes to GH'
echo 'DOTFILES...'
(cd ~/.dotfiles && git checkout master && PAGER=cat git diff origin/master..HEAD)
(cd ~/.dotfiles && git checkout master && PAGER=cat git diff)

echo 'ME...'
(cd ~/work/me && git checkout gh-pages && PAGER=cat git diff origin/gh-pages..HEAD)
(cd ~/work/me && git checkout gh-pages && PAGER=cat git diff)

cowsay 'Done!'
