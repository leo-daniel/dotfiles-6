[init]
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  st = status
[core]
	excludesfile = ~/.gitignore
  autocrlf = input
[commit]
	template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[user]
	name = Pablo Manrubia
	email = pmanrubia@gmail.com
[gui]
	fontui = -family \".SF NS Text\" -size 17 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Monaco -size 15 -weight normal -slant roman -underline 0 -overstrike 0
	commitmsgwidth = 72
